<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LabelLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shanine and Pauline"
            android:id="@+id/textView"
            android:autoText="false"
            android:textStyle="italic"
            android:textSize="34dp"
            android:typeface="serif"
            android:paddingLeft="18dp"
            android:textColor="#cf2149" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bus Trasport"
            android:id="@+id/textView2"
            android:textStyle="italic"
            android:typeface="serif"
            android:textSize="20dp"
            android:paddingLeft="110dp"
            android:textColor="#f6cf00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="top"
        android:background="#f7d842">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus name :"
            android:id="@+id/txt_bus_name"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plate no. :"
            android:id="@+id/txt_plate_no"
            android:paddingBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location :"
            android:id="@+id/txt_location"
            android:paddingBottom="5dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="85dp"
            android:background="#f6cf00" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EMERGENCY BUTTON"
                android:id="@+id/textView3"
                android:background="#FFF15F74"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff15f74">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:id="@+id/imgbtn_tire_and_lights"
                android:src="@mipmap/ic_launcher"
                android:background="#00000000"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:id="@+id/imgbtn_engine"
                android:src="@mipmap/ic_launcher"
                android:background="#00000000"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f15f74">

        <ImageButton
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:id="@+id/imgbtn_accident"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF15F74">

        <ImageButton
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:id="@+id/imgbtn_otherincident"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="85dp"
            android:background="#f6cf00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EMERGENCY BUTTON"
                android:id="@+id/textView6"
                android:background="#FFF15F74"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#FFF15F74">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/imgbtn_nearby_buses"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/imgbtn_police_hotline"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />
    </LinearLayout>

</LinearLayout>
